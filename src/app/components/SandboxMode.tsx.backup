import React, { useEffect, useRef, useState } from 'react';
import { Beaker, AlertCircle, Play, Pause, RotateCcw, Settings } from 'lucide-react';
import { useTheme } from '../contexts/ThemeContext';
import { FunctionId, evaluateFunction, numericDerivative } from '../gradientDescent';
import { appendExperiment } from '../experimentHistory';
import {
  ResponsiveContainer,
  ComposedChart,
  Line,
  Scatter,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  ReferenceDot,
  Cell,
} from 'recharts';

export function SandboxMode() {
  const { theme } = useTheme();
  const darkMode = theme === 'dark';
  const [learningRate, setLearningRate] = useState(0.1);
  const [stepSpeed, setStepSpeed] = useState(1);
  const [selectedFunction, setSelectedFunction] = useState<FunctionId>('quadratic');
  const [startX, setStartX] = useState(4);
  const [x, setX] = useState(4);
  const [step, setStep] = useState(0);
  const [isRunning, setIsRunning] = useState(false);
  const [trail, setTrail] = useState<{ x: number; y: number }[]>([]);
  const [maxIterations, setMaxIterations] = useState(1000);
  const [threshold, setThreshold] = useState(0.01);
  const [showAdvanced, setShowAdvanced] = useState(false);
  const [showTrail, setShowTrail] = useState(true);
  const [showTangent, setShowTangent] = useState(true);

  const savedCallback = useRef<() => void>();

  const fx = evaluateFunction(selectedFunction, x);
  const dfx = numericDerivative(selectedFunction, x);

  const generateFunctionData = (fn: FunctionId) => {
    const points: { x: number; y: number }[] = [];
    for (let xVal = -8; xVal <= 8; xVal += 0.2) {
      const y = evaluateFunction(fn, xVal);
      points.push({ x: Number(xVal.toFixed(2)), y });
    }
    return points;
  };

  const calculateStep = () => {
    const derivative = numericDerivative(selectedFunction, x);
    const newX = x - learningRate * derivative;
    const newFx = evaluateFunction(selectedFunction, newX);

    setX(newX);
    setStep((prev) => prev + 1);
    setTrail((prev) => [...prev, { x: newX, y: newFx }].slice(-50));

    if (Math.abs(derivative) < threshold || step + 1 >= maxIterations) {
      appendExperiment({
        id: `sandbox-${Date.now()}`,
        mode: 'sandbox',
        functionId: selectedFunction,
        learningRate,
        iterations: step + 1,
        outcome: Math.abs(derivative) < threshold ? 'converged' : 'stopped',
        timestamp: Date.now(),
      });
      setIsRunning(false);
    }
  };

  useEffect(() => {
    savedCallback.current = calculateStep;
  });

  useEffect(() => {
    if (!isRunning) return;
    const interval = setInterval(() => {
      if (savedCallback.current) {
        savedCallback.current();
      }
    }, 1000 / stepSpeed);
    return () => clearInterval(interval);
  }, [isRunning, stepSpeed]);

  const handleReset = () => {
    setIsRunning(false);
    setStep(0);
    setX(startX);
    const initialFx = evaluateFunction(selectedFunction, startX);
    setTrail([{ x: startX, y: initialFx }]);
  };

  const handleRunToggle = () => {
    setIsRunning((prev) => !prev);
  };

  return (
    <div className="h-full flex">
      {/* Main Canvas Area */}
      <div className="flex-1 p-8">
        <div className="mb-6">
          <div className={`flex items-center gap-2 mb-4 ${darkMode ? 'text-blue-400' : 'text-blue-600'}`}>
            <Beaker className="w-5 h-5" />
            <span className="text-sm font-medium">Sandbox Mode</span>
          </div>
          <h1 className={`text-4xl font-bold mb-2 ${darkMode ? 'text-white' : 'text-slate-900'}`}>
            Free Experimentation
          </h1>
          <p className={`${darkMode ? 'text-slate-400' : 'text-slate-600'}`}>
            No guidance. Full control. Break things and learn.
          </p>
        </div>

        {/* Info Banner */}
        <div className={`rounded-xl border p-4 mb-6 flex items-start gap-3 ${darkMode ? 'bg-amber-500/5 border-amber-500/30' : 'bg-amber-50 border-amber-200'}`}>
          <AlertCircle className={`w-5 h-5 flex-shrink-0 mt-0.5 ${darkMode ? 'text-amber-400' : 'text-amber-600'}`} />
          <div>
            <div className={`font-semibold mb-1 ${darkMode ? 'text-amber-400' : 'text-amber-700'}`}>
              Experimental Environment
            </div>
            <p className={`text-sm ${darkMode ? 'text-amber-200/80' : 'text-amber-800'}`}>
              This is your playground. Try extreme values, mix parameters, and observe what happens.
              There are no wrong answers here.
            </p>
          </div>
        </div>

        {/* Canvas */}
        <div className={`rounded-2xl border overflow-hidden ${darkMode ? 'bg-slate-900 border-slate-800' : 'bg-white border-slate-200'}`}>
          <div className={`px-4 py-3 border-b flex items-center justify-between ${darkMode ? 'border-slate-800 bg-slate-900' : 'border-slate-200 bg-slate-50'}`}>
            <div className="flex items-center gap-3">
              <div className="flex gap-2">
                <div className="w-3 h-3 rounded-full bg-red-500/80" />
                <div className="w-3 h-3 rounded-full bg-amber-500/80" />
                <div className="w-3 h-3 rounded-full bg-green-500/80" />
              </div>
              <span className={`text-sm font-mono ${darkMode ? 'text-slate-500' : 'text-slate-500'}`}>
                sandbox-experiment.flow
              </span>
            </div>
            <div className="flex items-center gap-2">
              <button className={`p-1.5 rounded hover:bg-slate-800 ${darkMode ? 'text-slate-400' : 'text-slate-600'}`}>
                <Settings className="w-4 h-4" />
              </button>
            </div>
          </div>

          <div className={`p-8 ${darkMode ? 'bg-slate-950' : 'bg-slate-50'}`}>
            <div className="flex items-center justify-center" style={{ height: '500px' }}>
              <ResponsiveContainer width="100%" height="100%">
                <ComposedChart
                  data={generateFunctionData(selectedFunction)}
                  margin={{ top: 20, right: 20, bottom: 20, left: 20 }}
                >
                  <CartesianGrid strokeDasharray="3 3" stroke="#334155" opacity={0.3} />
                  <XAxis
                    dataKey="x"
                    type="number"
                    domain={[-8, 8]}
                    tickCount={9}
                    stroke="#64748b"
                    fontSize={12}
                  />
                  <YAxis
                    domain={['auto', 'auto']}
                    stroke="#64748b"
                    fontSize={12}
                  />
                  <Tooltip
                    contentStyle={{ backgroundColor: '#1e293b', borderColor: '#334155', color: '#f8fafc' }}
                    itemStyle={{ color: '#60a5fa' }}
                    labelStyle={{ color: '#94a3b8' }}
                    formatter={(value: number) => value.toFixed(4)}
                  />
                  <Line
                    type="monotone"
                    dataKey="y"
                    stroke="#60a5fa"
                    strokeWidth={3}
                    dot={false}
                    activeDot={false}
                  />
                  {showTrail && (
                    <Scatter data={trail} fill="#8b5cf6" shape="circle">
                      {trail.map((_, index) => (
                        <Cell key={`cell-${index}`} fill="#8b5cf6" fillOpacity={0.1 + (index / trail.length) * 0.5} />
                      ))}
                    </Scatter>
                  )}
                  <ReferenceDot
                    x={x}
                    y={fx}
                    r={10}
                    fill="#22d3ee"
                    stroke="#fff"
                    strokeWidth={2}
                  />
                </ComposedChart>
              </ResponsiveContainer>
            </div>
          </div>
        </div>

        {/* Quick Actions */}
        <div className="flex items-center gap-3 mt-6">
          <button
            onClick={handleRunToggle}
            className="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-medium transition-colors flex items-center gap-2"
          >
            <Play className="w-4 h-4" />
            {isRunning ? 'Pause' : 'Run'}
          </button>
          <button
            onClick={() => setIsRunning(false)}
            className={`px-4 py-2 rounded-lg font-medium transition-colors flex items-center gap-2 ${darkMode ? 'bg-slate-800 hover:bg-slate-700 text-white' : 'bg-slate-200 hover:bg-slate-300 text-slate-900'}`}
          >
            <Pause className="w-4 h-4" />
            Pause
          </button>
          <button
            onClick={handleReset}
            className={`px-4 py-2 rounded-lg font-medium transition-colors flex items-center gap-2 ${darkMode ? 'bg-slate-800 hover:bg-slate-700 text-white' : 'bg-slate-200 hover:bg-slate-300 text-slate-900'}`}
          >
            <RotateCcw className="w-4 h-4" />
            Reset
          </button>
        </div>
      </div>

      {/* Right Controls Panel */}
      <aside className={`w-80 border-l p-6 overflow-y-auto ${darkMode ? 'bg-slate-900 border-slate-800' : 'bg-white border-slate-200'}`}>
        <h3 className={`font-semibold mb-4 ${darkMode ? 'text-white' : 'text-slate-900'}`}>Advanced Controls</h3>

        {/* Function Selection */}
        <div className="mb-6">
          <label className={`block text-sm font-medium mb-2 ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>
            Function Type
          </label>
          <select
            className={`w-full px-3 py-2 rounded-lg border ${darkMode ? 'bg-slate-800 border-slate-700 text-white' : 'bg-white border-slate-200 text-slate-900'}`}
            value={selectedFunction}
            onChange={(e) => setSelectedFunction(e.target.value as FunctionId)}
          >
            <option value="quadratic">Quadratic (x²)</option>
            <option value="quartic">Quartic (x⁴)</option>
            <option value="shifted">Shifted Parabola</option>
            <option value="complex">Complex Polynomial</option>
          </select>
        </div>

        {/* Learning Rate */}
        <div className="mb-6">
          <div className="flex items-center justify-between mb-2">
            <label className={`text-sm font-medium ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>
              Learning Rate
            </label>
            <span className={`text-sm font-mono ${darkMode ? 'text-blue-400' : 'text-blue-600'}`}>
              {learningRate.toFixed(3)}
            </span>
          </div>
          <input
            type="range"
            min="0.001"
            max="1"
            step="0.001"
            value={learningRate}
            onChange={(e) => setLearningRate(parseFloat(e.target.value))}
            className="w-full"
          />
        </div>

        {/* Step Speed */}
        <div className="mb-6">
          <div className="flex items-center justify-between mb-2">
            <label className={`text-sm font-medium ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>
              Step Speed
            </label>
            <span className={`text-sm font-mono ${darkMode ? 'text-blue-400' : 'text-blue-600'}`}>
              {stepSpeed.toFixed(1)}x
            </span>
          </div>
          <input
            type="range"
            min="0.1"
            max="5"
            step="0.1"
            value={stepSpeed}
            onChange={(e) => setStepSpeed(parseFloat(e.target.value))}
            className="w-full"
          />
        </div>

        {/* Starting Position */}
        <div className="mb-6">
          <label className={`block text-sm font-medium mb-2 ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>
            Starting Position
          </label>
          <input
            type="number"
            className={`w-full px-3 py-2 rounded-lg border ${darkMode ? 'bg-slate-800 border-slate-700 text-white' : 'bg-white border-slate-200 text-slate-900'}`}
            value={startX}
            onChange={(e) => setStartX(parseFloat(e.target.value) || 0)}
          />
        </div>

        {/* Toggles */}
        <div className="space-y-3 mb-6">
          <label className="flex items-center gap-3 cursor-pointer">
            <input
              type="checkbox"
              checked={showTrail}
              onChange={(e) => setShowTrail(e.target.checked)}
              className="rounded"
            />
            <span className={`text-sm ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>Show Trail</span>
          </label>
          <label className="flex items-center gap-3 cursor-pointer">
            <input
              type="checkbox"
              checked={showTangent}
              onChange={(e) => setShowTangent(e.target.checked)}
              className="rounded"
            />
            <span className={`text-sm ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>Show Tangent Line</span>
          </label>
          <label className="flex items-center gap-3 cursor-pointer">
            <input type="checkbox" className="rounded" />
            <span className={`text-sm ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>Show Gradient Vector</span>
          </label>
          <label className="flex items-center gap-3 cursor-pointer">
            <input type="checkbox" className="rounded" />
            <span className={`text-sm ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>Auto-Reset on Convergence</span>
          </label>
        </div>

        {/* Advanced Settings Toggle */}
        <button
          onClick={() => setShowAdvanced(!showAdvanced)}
          className={`w-full px-4 py-2 rounded-lg text-sm font-medium transition-colors ${darkMode ? 'bg-slate-800 hover:bg-slate-700 text-white' : 'bg-slate-100 hover:bg-slate-200 text-slate-900'}`}
        >
          {showAdvanced ? 'Hide' : 'Show'} Advanced Settings
        </button>

        {showAdvanced && (
          <div className="mt-4 space-y-4">
            <div>
              <label className={`block text-sm font-medium mb-2 ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>
                Max Iterations
              </label>
              <input
                type="number"
                className={`w-full px-3 py-2 rounded-lg border ${darkMode ? 'bg-slate-800 border-slate-700 text-white' : 'bg-white border-slate-200 text-slate-900'}`}
                value={maxIterations}
                onChange={(e) => setMaxIterations(parseInt(e.target.value || '0', 10))}
              />
            </div>
            <div>
              <label className={`block text-sm font-medium mb-2 ${darkMode ? 'text-slate-300' : 'text-slate-700'}`}>
                Convergence Threshold
              </label>
              <input
                type="number"
                step="0.0001"
                className={`w-full px-3 py-2 rounded-lg border ${darkMode ? 'bg-slate-800 border-slate-700 text-white' : 'bg-white border-slate-200 text-slate-900'}`}
                value={threshold}
                onChange={(e) => setThreshold(parseFloat(e.target.value) || 0)}
              />
            </div>
          </div>
        )}

        {/* Experiment History */}
        <div className="mt-8">
          <h4 className={`text-sm font-semibold mb-3 ${darkMode ? 'text-white' : 'text-slate-900'}`}>
            Recent Experiments
          </h4>
          <div className="space-y-2">
            <ExperimentCard
              name="Quartic, LR=0.5"
              result="Diverged"
              darkMode={darkMode}
            />
            <ExperimentCard
              name="Quadratic, LR=0.05"
              result="Converged"
              darkMode={darkMode}
            />
            <ExperimentCard
              name="Custom, LR=0.2"
              result="Slow convergence"
              darkMode={darkMode}
            />
          </div>
        </div>
      </aside>
    </div>
  );
}

function ExperimentCard({ name, result, darkMode }: { name: string; result: string; darkMode: boolean }) {
  return (
    <div className={`p-3 rounded-lg border text-sm ${darkMode ? 'bg-slate-800 border-slate-700' : 'bg-slate-50 border-slate-200'}`}>
      <div className={`font-medium mb-1 ${darkMode ? 'text-white' : 'text-slate-900'}`}>{name}</div>
      <div className={`text-xs ${darkMode ? 'text-slate-500' : 'text-slate-500'}`}>{result}</div>
    </div>
  );
}
